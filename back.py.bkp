import sys
from pylab import *
import wave

def show_wav(fname):
    f = wave.open(fname, 'r')
    sound_info = f.readframes(-1)
    sound_info = fromstring(sound_info, 'Int16')
    print type(sound_info)

    frrate = f.getframerate()

    subplot(211)
    plot(sound_info)

    show()
    f.close()

fname = sys.argv[1]
